<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>

<?import javafx.scene.layout.*?>



<fx:root alignment="CENTER" prefHeight="200.0" prefWidth="100.0" type="VBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <ImageView fx:id="image" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" visible="false">
         <image>
            <Image url="@ber1.jpg" />
         </image>
      </ImageView>
      <StackPane>
         <children>
            <Button fx:id="HideImageButton" mnemonicParsing="false" onAction="#HideImage" prefHeight="25.0" prefWidth="139.0" text="Cховати зображення" visible="false" />
            <Button fx:id="ShowImageButton" mnemonicParsing="false" onAction="#ShowImage" text="Показати зображення" />
         </children>
      </StackPane>
      <Button fx:id="ChooseImageButton" mnemonicParsing="false" onAction="#ChooseImage" prefHeight="25.0" prefWidth="137.0" text="Обрати зображення" />
   </children>
</fx:root>
